{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Logger": "readonly",
    "Variables": "readonly",
    "Flow": "readonly",
    "http": "readonly",
    "Sleep": "readonly",
    "MissingVariable": "readonly",
    "LanguageHelper": "readonly",
    "JsonContent": "readonly",
    "System": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "prettier/prettier": "error"
  }
}
